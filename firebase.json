{
  "hosting": {
    "public": "public/",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "cleanurls": true,
    "rewrites": [
      {
        "source": "**",
        "function": "nextjs-server"
      }
    ]
  },
  "functions": {
    "source": ".",
    "predeploy": [
      "npm --prefix . run build"
    ],
    "runtime": "nodejs16"
  },
  "storage": {
    "rules": "storage.rules"
  }
}
